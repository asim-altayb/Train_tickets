<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ticket__info"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/colorPrimary"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.memosh.train_tickets.Ticket_Info">


    <TextView
        android:text="الاسم :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#07006c"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"

        android:layout_marginTop="52dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="الوجهه :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#07006c"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="30dp"
        android:id="@+id/textView8" />

    <TextView
        android:text="السعر :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#07006c"
        android:layout_below="@+id/textView8"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:layout_marginTop="25dp"
        android:id="@+id/textView10" />

    <TextView
        android:text="رقم القطار :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#07006c"
        android:layout_alignEnd="@+id/textView10"
        android:layout_marginTop="25dp"
        android:id="@+id/textView11" />

    <TextView
        android:text="رقم العربه :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#07006c"
        android:layout_below="@+id/textView11"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11"
        android:layout_marginTop="25dp"
        android:id="@+id/textView12" />

    <TextView
        android:text="رقم المقعد :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#07006c"
        android:layout_alignLeft="@+id/textView12"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView12"
        android:id="@+id/textView13" />

    <TextView
        android:text="الدرجه :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignRight="@+id/textView12"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#07006c"
        android:layout_alignEnd="@+id/textView12"
        android:layout_marginTop="25dp"
        android:id="@+id/textView15" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:id="@+id/name_info" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignRight="@+id/name_info"
        android:layout_alignEnd="@+id/name_info"
        android:id="@+id/to_info" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView10"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_alignRight="@+id/to_info"
        android:layout_alignEnd="@+id/to_info"
        android:id="@+id/price_info" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView13"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_alignRight="@+id/train_no_info"
        android:layout_alignEnd="@+id/train_no_info"
        android:id="@+id/car_train_info" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignLeft="@+id/car_train_info"
        android:layout_alignStart="@+id/car_train_info"
        android:id="@+id/chair_info" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView15"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_alignRight="@+id/chair_info"
        android:layout_alignEnd="@+id/chair_info"
        android:id="@+id/class_info" />

    <TextView
        android:text="معلومات الرحله "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView14"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:textStyle="italic"
        android:id="@+id/train_no_info"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/price_info"
        android:layout_alignStart="@+id/price_info" />

    <TextView
        android:text="التاريخ :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:textColor="#07006c"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textView23"
        android:layout_below="@+id/textView15" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView23"
        android:layout_alignLeft="@+id/class_info"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_alignStart="@+id/class_info"
        android:id="@+id/date_info" />

    <Button
        android:text="تأكيد"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/button" />

    <Button
        android:text="الغاء"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
