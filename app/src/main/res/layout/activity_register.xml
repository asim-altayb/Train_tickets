<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".register">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:textAlignment="center"
        android:layout_below="@+id/emailreg"
        android:layout_alignRight="@+id/emailreg"
        android:textColor="@color/white"
        android:layout_alignEnd="@+id/emailreg"
        android:layout_marginTop="26dp"
        android:id="@+id/numberreg"
        android:hint="Phone number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:ems="10"
        android:layout_below="@+id/numberreg"
        android:layout_alignRight="@+id/numberreg"
        android:layout_alignEnd="@+id/numberreg"
        android:layout_marginTop="35dp"
        android:id="@+id/passreg"
        android:hint="Password" />

    <Button
        android:text="Register Now "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:id="@+id/regbtn"
        android:layout_above="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:id="@+id/emailreg"
        android:hint="Email"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:ems="10"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:id="@+id/name"
        android:hint="Your name"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/emailreg"
        android:layout_alignStart="@+id/emailreg" />

    <TextView
        android:text="You have account ? login now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginBottom="19dp"
        android:id="@+id/login"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp" />
</RelativeLayout>
